{
  "name": "npm-run-scripts",
  "version": "2.1.3",
  "description": "Run Scripts in package.json File",
  "keywords": [
    "npm",
    "run",
    "script",
    "scripts",
    "yarn"
  ],
  "homepage": "https://github.com/fisker/npm-run-scripts#readme",
  "bugs": {
    "url": "https://github.com/fisker/npm-run-scripts/issues"
  },
  "repository": "fisker/npm-run-scripts",
  "funding": "https://github.com/fisker/npm-run-scripts?sponsor=1",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "type": "module",
  "bin": {
    "npm-run": "cli.js",
    "nr": "cli.js",
    "yarn-run": "cli.js",
    "yr": "cli.js"
  },
  "files": [
    "cli.js",
    "lib"
  ],
  "scripts": {
    "build": "echo no need",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,cjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,cjs,mjs,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s lint build format dist"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "ansi-colors": "4.1.3",
    "enquirer": "2.3.6",
    "esm-utils": "4.1.2",
    "execa": "6.1.0",
    "meow": "10.1.5",
    "read-pkg-up": "9.1.0",
    "update-notifier": "6.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.0",
    "@fisker/commitlint-config": "2.0.5",
    "@fisker/eslint-config": "10.4.0",
    "@fisker/husky-config": "4.1.3",
    "@fisker/lint-staged-config": "3.3.1",
    "@fisker/prettier-config": "5.1.1",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-json": "6.0.1",
    "cz-conventional-changelog": "3.3.0",
    "del-cli": "5.1.0",
    "eslint": "8.39.0",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "markdownlint-cli": "0.37.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "rollup": "4.3.1",
    "sort-package-json": "2.6.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
