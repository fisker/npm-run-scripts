{
  "name": "npm-run-scripts",
  "version": "1.4.2",
  "description": "Run Scripts in package.json File",
  "keywords": [
    "npm",
    "yarn",
    "scripts",
    "run",
    "script"
  ],
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "homepage": "https://github.com/fisker/npm-run-scripts#readme",
  "repository": "fisker/npm-run-scripts",
  "scripts": {
    "build": "rollup --config",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s lint build format dist"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "bin": {
    "npm-run": "bin/cli",
    "yarn-run": "bin/cli",
    "nr": "bin/cli",
    "yr": "bin/cli"
  },
  "license": "MIT",
  "dependencies": {
    "ansi-colors": "4.1.1",
    "enquirer": "2.3.2",
    "execa": "3.2.0",
    "meow": "5.0.0",
    "read-pkg-up": "7.0.0",
    "update-notifier": "3.0.1"
  },
  "files": [
    "bin"
  ],
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@fisker/commitlint-config": "1.1.3",
    "@fisker/eslint-config": "1.3.5",
    "@fisker/husky-config": "1.1.3",
    "@fisker/lint-staged-config": "1.0.6",
    "@fisker/prettier-config": "1.0.22",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.6.0",
    "husky": "3.1.0",
    "lint-staged": "9.4.3",
    "markdownlint-cli": "0.19.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "rollup": "1.27.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-filesize": "6.2.1",
    "rollup-plugin-json": "4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": false
}
