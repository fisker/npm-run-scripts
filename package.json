{
  "name": "npm-run-scripts",
  "version": "1.4.3",
  "description": "Run Scripts in package.json File",
  "keywords": [
    "npm",
    "run",
    "script",
    "scripts",
    "yarn"
  ],
  "homepage": "https://github.com/fisker/npm-run-scripts#readme",
  "repository": "fisker/npm-run-scripts",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "bin": {
    "npm-run": "dist/cli",
    "nr": "dist/cli",
    "yarn-run": "dist/cli",
    "yr": "dist/cli"
  },
  "scripts": {
    "build": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s lint build format dist"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "ansi-colors": "4.1.1",
    "enquirer": "2.3.4",
    "execa": "4.0.0",
    "meow": "6.0.0",
    "read-pkg-up": "7.0.1",
    "update-notifier": "4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@fisker/commitlint-config": "1.1.6",
    "@fisker/eslint-config": "1.6.1",
    "@fisker/husky-config": "1.1.7",
    "@fisker/lint-staged-config": "1.0.10",
    "@fisker/prettier-config": "1.0.26",
    "@rollup/plugin-commonjs": "11.0.1",
    "@rollup/plugin-json": "4.0.1",
    "cz-conventional-changelog": "3.0.2",
    "del-cli": "3.0.0",
    "eslint": "6.8.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.2",
    "markdownlint-cli": "0.21.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "rollup": "1.30.0",
    "sort-package-json": "1.39.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
