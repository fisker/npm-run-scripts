{
  "name": "npm-run-scripts",
  "version": "1.2.0",
  "description": "run npm scripts",
  "keywords": [
    "npm",
    "yarn",
    "scripts",
    "run",
    "script"
  ],
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "scripts": {
    "release": "run-s lint prettier dist",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"node_modules/**\"",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "npm-run": "cli.js",
    "yarn-run": "cli.js",
    "nr": "cli.js",
    "yr": "cli.js"
  },
  "license": "MIT",
  "dependencies": {
    "ansi-colors": "^3.2.4",
    "enquirer": "^2.3.0",
    "execa": "^1.0.0",
    "has-yarn": "^2.1.0",
    "read-pkg-up": "^5.0.0",
    "update-notifier": "^2.5.0"
  },
  "files": [
    "cli.js"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "eslint-config-fisker": "^4.3.6",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "markdownlint-cli": "^0.15.0",
    "np": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "prettier-config-fisker": "^1.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  }
}
